/* components/tab-control/tab-control.wxss */

.tab-control {
  display: flex;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #ffffff;
}

.tab-item {
  flex: 1;
  text-align: center;
}

.active {
  color: #1296db;
}

.active text {
  padding: 20rpx 13rpx;
  border-bottom: 8rpx solid #1296db;
}
