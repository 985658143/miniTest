<view class="tab-control">
  <block wx:for="{{titles}}" wx:key="index">
    <view class="tab-item {{currentIndex == index ? 'active' : ''}}" 
          bind:tap="itemClick"
          data-index="{{index}}"
          >
      <text>{{item}}</text>  
    </view>
    
  </block>
</view>
<view class="box_wrapper">
  <block wx:for="{{contents}}" wx:key="index">
    <view class="box {{currentIndex == index ? 'box' + index + '' : ''}}"></view>
  </block>
</view>