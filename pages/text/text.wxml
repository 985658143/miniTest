<!--pages/text/text.wxml-->
<!-- 1.基本使用 (不自动换行)-->
<text>Hello world\n</text>
<text>你好小程序\n</text>

<!-- 2. selectable:true-->
<!-- 默认情况下text下的文本长按是不能选中的 false-->

<text selectable="{{true}}">Hello Codewhy\n</text>
<!-- 等同于 -->
<text user-select="">Hello Codewhy\n</text>

<!-- 3.space：决定文本空格的大小 默认是nbsp-->
<text>Hello World\n</text>
<text space="ensp">Hello World\n</text>
<text space="emsp">Hello World\n</text>
<text space="nbsp">Hello World\n</text>

<!-- 4.decode:是否解码文本 -->
<text decode="{{true}}">5 &gt; 3</text>