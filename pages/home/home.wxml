<!--page/home.wxml-->

<!-- 1.自定义组件的基本使用 -->
<my-cpn></my-cpn>
<my-cpn></my-cpn>
<my-cpn/>

<!-- 2.自定义组件的样式细节 -->
<!-- <my-style/> -->
<view>--------------组件和页面通信---------------</view>
<!-- 3.给自定义组件传递数据/样式 -->
<my-prop title="哈哈哈" titleclass="red"></my-prop>
<my-prop title="嘿嘿嘿" titleclass="green"></my-prop>
<my-prop titleclass="blue"></my-prop>

<!-- 4.组件内部发出事件 -->
<view>当前计数：{{counter}}</view>
<my-event bind:increment="handleIncrement"></my-event>

<view>----------------tab-control---------------</view>
<!-- 5.tab-control的练习 -->
<tab-control titles="{{['衣服','裤子','袜子']}}" contents="{{['衣服内容','裤子内容','袜子内容']}}"
              bind:itemClick="handleTabClick"

></tab-control>

<!-- 6.直接选中组件修改数据/调用方法 -->
<button size="mini" bind:tap="incrementCpn">修改组件内的数据</button>
<my-select class="select" id="select"></my-select>

<view>----------------插槽的使用---------------</view>
<!-- 7.1插槽的使用 -->
<my-slot>
  <button size="mini">我是插入的按钮</button>
</my-slot>

<my-slot>
  <text>哈哈哈哈</text>
</my-slot>

<my-slot>
  <image src="/assets/tabbar/clothes.png"></image>
</my-slot>

<my-slot>
  <slider value="60"></slider>
</my-slot>

<!-- 7.2插槽的使用 -->
<!-- 
  注意事项：(两个条件缺一不可)
  1.给每一个插槽起一个名字： name属性
  2.必须在component对象中添加一个选项：options => multipleSlots: true

 -->
<button size="mini" bind:tap="handleChangeShow">切换显示</button>
  <block wx:if="{{isShow}}">
    <mul-slot>
    <button size="mini" slot="slot2">我是插入的按钮</button>
    <slider slot="slot1"></slider>
    <text slot="slot3">哈哈哈哈</text>
  </mul-slot>
</block>


